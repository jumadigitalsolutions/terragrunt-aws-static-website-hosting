{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3BucketOperations",
            "Effect": "Allow",
            "Action": [
                "s3:*Bucket*",
                "s3:List*",
                "s3:Get*",
                "s3:Put*",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::hippo-website-*",
                "arn:aws:s3:::route53-query-logs-*",
                "arn:aws:s3:::waf-logs-*"
            ]
        },
        {
            "Sid": "S3ObjectOperations",
            "Effect": "Allow",
            "Action": [
                "s3:*Object*"
            ],
            "Resource": [
                "arn:aws:s3:::hippo-website-*/*",
                "arn:aws:s3:::route53-query-logs-*/*",
                "arn:aws:s3:::waf-logs-*/*"
            ]
        },
        {
            "Sid": "S3GlobalOperations",
            "Effect": "Allow",
            "Action": [
                "s3:ListAllMyBuckets",
                "s3:GetBucketLocation"
            ],
            "Resource": "*"
        },
        {
            "Sid": "CloudfrontOperations",
            "Effect": "Allow",
            "Action": [
                "cloudfront:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "Route53Operations",
            "Effect": "Allow",
            "Action": [
                "route53:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ACMOperations",
            "Effect": "Allow",
            "Action": [
                "acm:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ContainerServices",
            "Effect": "Allow",
            "Action": [
                "ecs:*",
                "ecr:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "LoadBalancingOperations",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "IAMRoleAndPolicyOperations",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:GetRole",
                "iam:ListRoles",
                "iam:UpdateRole",
                "iam:TagRole",
                "iam:UntagRole",
                "iam:ListRoleTags",
                "iam:CreatePolicy",
                "iam:DeletePolicy",
                "iam:GetPolicy",
                "iam:ListPolicies",
                "iam:CreatePolicyVersion",
                "iam:DeletePolicyVersion",
                "iam:GetPolicyVersion",
                "iam:ListPolicyVersions",
                "iam:PutRolePolicy",
                "iam:GetRolePolicy",
                "iam:DeleteRolePolicy",
                "iam:ListRolePolicies",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:ListAttachedRolePolicies"
            ],
            "Resource": "*",
            "Condition": {
                "StringNotEquals": {
                    "iam:ResourceTag/Protected": "true"
                }
            }
        },
        {
            "Sid": "IAMPassRolePermission",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": "arn:aws:iam::*:role/hippo-*",
            "Condition": {
                "StringEquals": {
                    "iam:PassedToService": [
                        "ecs.amazonaws.com",
                        "ecs-tasks.amazonaws.com",
                        "firehose.amazonaws.com",
                        "s3.amazonaws.com"
                    ]
                }
            }
        },
        {
            "Sid": "IAMServiceLinkedRolePermission",
            "Effect": "Allow",
            "Action": "iam:CreateServiceLinkedRole",
            "Resource": [
                "arn:aws:iam::*:role/aws-service-role/ecs.amazonaws.com/*",
                "arn:aws:iam::*:role/aws-service-role/elasticloadbalancing.amazonaws.com/*",
                "arn:aws:iam::*:role/aws-service-role/firehose.amazonaws.com/*",
                "arn:aws:iam::*:role/aws-service-role/route53.amazonaws.com/*"
            ]
        },
        {
            "Sid": "EncryptionKeyOperations",
            "Effect": "Allow",
            "Action": [
                "kms:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "LoggingAndMonitoring",
            "Effect": "Allow",
            "Action": [
                "logs:*",
                "cloudwatch:*",
                "sns:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "WAFandFirehose",
            "Effect": "Allow",
            "Action": [
                "wafv2:*",
                "firehose:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "TerraformStateAccess",
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": "arn:aws:s3:::jumads-hippo-terraform-state*"
        },
        {
            "Sid": "DynamoDBOperations",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem",
                "dynamodb:DescribeTable"
            ],
            "Resource": "arn:aws:dynamodb:*:*:table/terraform-state-lock"
        },
        {
            "Sid": "EC2VPCOperations",
            "Effect": "Allow",
            "Action": [
                "ec2:Describe*",
                "ec2:*Vpc*",
                "ec2:*Subnet*",
                "ec2:*Route*",
                "ec2:*Gateway*",
                "ec2:*SecurityGroup*",
                "ec2:*Address",
                "ec2:*Tags"
            ],
            "Resource": "*"
        }
    ]
}